<div class="min-h-screen px-4">
  <div class="mx-auto flex max-w-7xl items-center justify-center py-16">
    <div class="w-full max-w-md rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">

      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Get started</h1>
        <p class="mt-2 text-sm text-gray-600">
          Create your account to start using <span class="font-semibold">pluto.ai</span>.
        </p>
      </div>

      <%= form_with url: user_registration_path,
            scope: :user,
            local: true,
            class: "space-y-5" do |f| %>

        <div>
          <%= f.label :username, "Firstname", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :username,
                placeholder: "Firstname",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
                placeholder: "you@example.com",
                autocomplete: "email",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                placeholder: "••••••••",
                autocomplete: "new-password",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation,
                placeholder: "••••••••",
                autocomplete: "new-password",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <%= f.submit "Create account",
              class: "w-full rounded-lg bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>

      <% end %>

      <div class="mt-6 text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", login_path,
          class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>

    </div>
  </div>
</div>
