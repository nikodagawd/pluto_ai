<div class="flex min-h-[calc(100vh-64px)] items-center justify-center px-6 py-16 bg-transparent">
  <div class="w-full max-w-md">

    <div class="mb-8 text-center">
      <h1 class="text-2xl font-bold text-gray-900">Get started</h1>
      <p class="mt-2 text-sm text-gray-600">
        Create your account to start using <span class="font-semibold">pluto.ai</span>.
      </p>
    </div>

    <div class="w-full max-w-md rounded-2xl border border-gray-900 bg-white p-8 shadow-xl shadow-slate-200/40">

      <%= form_with url: user_registration_path,
            scope: :user,
            local: true,
            class: "space-y-5" do |f| %>

        <div>
          <%= f.label :username, "Firstname", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :username,
                placeholder: "Firstname",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
                placeholder: "you@example.com",
                autocomplete: "email",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                placeholder: "••••••••",
                autocomplete: "new-password",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation,
                placeholder: "••••••••",
                autocomplete: "new-password",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <%= f.submit "Create account",
              class: "mt-2 w-full rounded-lg bg-indigo-600 px-4 py-3 text-sm font-semibold text-white hover:bg-indigo-700" %>

      <% end %>

      <div class="mt-6 text-center text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in",
              login_path,
              class: "font-semibold text-indigo-600 hover:text-indigo-700" %>
      </div>

    </div>
  </div>
</div>
