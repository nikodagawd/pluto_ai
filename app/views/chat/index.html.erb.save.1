<div class="min-h-screen bg-[#fdf5e6] flex flex-col items-center py-10 px-4" data-controller="speech">
  <div class="max-w-4xl w-full">

    <div class="text-center mb-12">
      <p class="text-xl md:text-2xl text-black font-semibold flex items-center justify-center gap-2">
        üîç AI-Powered Discovery
      </p>
      <h1 class="text-5xl md:text-6xl font-bold text-black mt-4 tracking-tight italic">
        Company Explorer
      </h1>
    </div>

    <div class="w-full bg-white rounded-2xl shadow-xl p-8 flex flex-col border border-gray-100">
      
      <%= form_with url: chat_path, method: :post, local: true, class: "w-full mb-4", multipart: true do |f| %>
        
        <div class="relative bg-gray-50 rounded-2xl border border-gray-200 focus-within:ring-2 focus-within:ring-indigo-500/20 focus-within:border-indigo-500 transition-all">
          <%= f.text_area :message,
            value: @message,
            placeholder: "What would you like to know?",
            data: { speech_target: "input" },
            rows: 4,
            class: "w-full bg-transparent border-none p-5 text-lg outline-none resize-none placeholder:text-gray-400" %>
          
          <div class="flex items-center justify-between p-3 border-t border-gray-100/50">
            <div class="flex items-center gap-1">
              <label class="p-2 text-gray-400 hover:text-indigo-600 transition-colors cursor-pointer rounded-lg hover:bg-white" title="Attach document">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.44 11.05-9.19 9.19a6 6 0 0 1-8.49-8.49l8.57-8.57A4 4 0 1 1 18 8.84l-8.59 8.51a2 2 0 0 1-2.83-2.83l8.49-8.48"/></svg>
                <%= f.file_field :attachment, class: "hidden" %>
              </label>

              <button type="button" 
                      data-action="mousedown->speech#startRecording mouseup->speech#stopRecording"
                      class="mic-button p-2 text-gray-400 hover:text-red-500 transition-colors rounded-lg hover:bg-white outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/></svg>
              </button>
            </div>

            <%= f.submit "Search", class: "bg-indigo-600 text-white px-6 py-2 rounded-xl font-bold hover:bg-indigo-700 transition-all cursor-pointer active:scale-95 shadow-sm" %>
          </div>
        </div>

        <div class="flex flex-row items-center gap-3 mt-6 overflow-x-auto pb-2 no-scrollbar">
          <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest whitespace-nowrap">Filters</span>
          
          <%= f.select :city, ['Berlin', 'Munich', 'Frankfurt', 'Hamburg', 'Cologne', 'D√ºsseldorf'], { include_blank: "District" }, { class: "bg-gray-100 border-none text-gray-700 text-[11px] font-bold rounded-full px-4 py-1.5 focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer hover:bg-gray-200 transition-all" } %>
          
          <%= f.select :revenue, ['< 10M‚Ç¨', '10M‚Ç¨ - 100M‚Ç¨', '> 100M‚Ç¨'], { include_blank: "Revenue" }, { class: "bg-gray-100 border-none text-gray-700 text-[11px] font-bold rounded-full px-4 py-1.5 focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer hover:bg-gray-200 transition-all" } %>
          
          <%= f.select :sector, ['Technology', 'Healthcare', 'Finance', 'Manufacturing'], { include_blank: "Sector" }, { class: "bg-gray-100 border-none text-gray-700 text-[11px] font-bold rounded-full px-4 py-1.5 focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer hover:bg-gray-200 transition-all" } %>
          
          <%= f.select :business_type, ['B2B', 'B2C', 'Hybrid'], { include_blank: "Model" }, { class: "bg-gray-100 border-none text-gray-700 text-[11px] font-bold rounded-full px-4 py-1.5 focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer hover:bg-gray-200 transition-all" } %>
        </div>
      <% end %>

      <% if @companies.present? %>
        <div class="mt-8 mb-6 border-t pt-8">
            <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-widest mb-4">Search Results</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @companies.each do |company| %>
                <div class="bg-white rounded-xl p-5 border border-gray-100 shadow-sm hover:shadow-lg transition-all flex flex-col group">
                  <div class="flex justify-between items-start mb-2">
                    <strong class="text-lg text-indigo-900 group-hover:text-indigo-600 transition-colors"><%= company.company_name %></strong>
                  </div>
                  <p class="text-sm text-gray-600 mb-4 line-clamp-3 leading-relaxed"><%= company.description %></p>
                  <div class="text-[10px] text-gray-400 flex justify-between uppercase font-bold tracking-wider border-t border-gray-50 pt-3">
                    <span class="bg-gray-100 px-2 py-0.5 rounded"><%= company.sector %></span>
                    <span><%= company.city %></span>
                  </div>
                </div>
              <% end %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
