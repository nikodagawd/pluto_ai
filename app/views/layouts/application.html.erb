<!DOCTYPE html>
<html>
  <head>
    <title>PlutoAi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
      <div class="container mx-auto px-5">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-indigo-600 transition-colors" do %>
            pluto.ai
          <% end %>

          <!-- Auth Links -->
          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <span class="text-gray-700 text-sm">
                Hello, <span class="font-medium"><%= current_user.username %></span>
              </span>
              <%= button_to destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-900 text-sm font-medium transition-colors" do %>
                Sign Out
              <% end %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "text-gray-600 hover:text-gray-900 text-sm font-medium transition-colors" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mx-auto px-5 pt-20">
      <% if notice %>
        <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
          <%= alert %>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto mt-8 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
