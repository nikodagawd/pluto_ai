<div class="flex min-h-[calc(100vh-64px)] items-center justify-center px-6 py-16 bg-transparent">
  <div class="w-full max-w-md rounded-2xl border border-slate-200 bg-white p-8 shadow-xl shadow-slate-200/40">

    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-2xl font-bold text-slate-900">Sign in</h1>
      <p class="mt-2 text-sm text-slate-600">
        Welcome back to <span class="font-semibold">pluto.ai</span> — Company Explorer.
      </p>
    </div>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>

      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "you@example.com",
              class: "mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-700" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "••••••••",
              class: "mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
      </div>

      <% if devise_mapping.rememberable? || devise_mapping.recoverable? %>
        <div class="flex items-center justify-between text-sm">
          <% if devise_mapping.rememberable? %>
            <label class="flex items-center gap-2">
              <%= f.check_box :remember_me,
                    class: "h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
              <span class="text-slate-600">Remember me</span>
            </label>
          <% else %>
            <span></span>
          <% end %>

          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password?",
                  new_password_path(resource_name),
                  class: "font-semibold text-indigo-600 hover:text-indigo-700" %>
          <% end %>
        </div>
      <% end %>

      <%= f.submit "Sign in",
            class: "mt-2 w-full rounded-lg bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-700" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-slate-600">
      Don’t have an account?
      <%= link_to "Sign up",
            new_registration_path(resource_name),
            class: "font-semibold text-indigo-600 hover:text-indigo-700" %>
    </div>

    <p class="mt-8 text-center text-xs text-slate-500">
      By signing in, you agree to our Terms and Privacy Policy.
    </p>

  </div>
</div>
