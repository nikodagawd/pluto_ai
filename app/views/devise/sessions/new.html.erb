<div class="min-h-screen bg-gray-50 px-4">
  <div class="mx-auto flex max-w-7xl items-center justify-center py-16">
    <div class="w-full max-w-md rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">

      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Sign in</h1>
        <p class="mt-2 text-sm text-gray-600">
          Welcome back to <span class="font-semibold">pluto.ai</span> — Company Explorer.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <div>
          <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "you@example.com",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "mt-2 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <% if devise_mapping.rememberable? || devise_mapping.recoverable? %>
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="flex items-center gap-2">
                <%= f.check_box :remember_me,
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                <span class="text-sm text-gray-600">Remember me</span>
              </label>
            <% else %>
              <span></span>
            <% end %>

            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?",
                    new_password_path(resource_name),
                    class: "text-sm font-semibold text-indigo-600 hover:text-indigo-500" %>
            <% end %>
          </div>
        <% end %>

        <%= f.submit "Sign in",
              class: "w-full rounded-lg bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
      <% end %>

      <div class="mt-6 text-sm text-gray-600">
        Don’t have an account?
        <%= link_to "Sign up",
              new_registration_path(resource_name),
              class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
      </div>

      <p class="mt-8 text-xs text-gray-500">
        By signing in, you agree to our Terms and Privacy Policy.
      </p>

    </div>
  </div>
</div>
