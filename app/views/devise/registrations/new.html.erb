<div class="flex min-h-[calc(100vh-64px)] items-center justify-center px-6 py-16 bg-transparent">
  <div class="w-full max-w-md">

    <div class="mb-8 text-center">
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-500 border-2 border-black text-white font-bold text-xl mx-auto mb-4">
        ✦
      </div>
      <h2 class="text-2xl font-semibold text-gray-900">
        Create your account
      </h2>
      <p class="mt-2 text-sm text-gray-500">
        Start exploring companies with AI-powered insights.
      </p>
    </div>

    <div class="w-full rounded-2xl border border-gray-900 bg-white p-8 shadow-xl shadow-slate-200/40">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>

        <% if resource.errors.any? %>
          <div class="rounded-md border border-red-200 bg-red-50 p-4 text-sm text-red-700">
            <strong><%= pluralize(resource.errors.count, "error") %> prevented sign up:</strong>
            <ul class="mt-2 list-disc list-inside">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :username, "Firstname", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :username,
                autofocus: true,
                autocomplete: "username",
                placeholder: "Firstname",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
                autocomplete: "email",
                placeholder: "you@example.com",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "mt-2 w-full rounded-lg border border-slate-300 !bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" %>
        </div>

        <%= f.submit "Create account",
              class: "mt-2 w-full rounded-lg bg-indigo-600 px-4 py-3 text-sm font-semibold text-white hover:bg-indigo-700" %>

      <% end %>

      <div class="mt-6 text-center text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in",
              login_path,
              class: "font-semibold text-indigo-600 hover:text-indigo-700" %>
      </div>

    </div>
  </div>
</div>
